<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Ahnenforscherin.Views.PersonListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:models="using:Ahnenforscherin.Views"
    mc:Ignorable="d">
	<Grid Padding="24">
		<StackPanel Spacing="12">
			<TextBlock Text="Personenliste"
                       FontSize="32"
                       FontWeight="SemiBold" />
			<ListView ItemsSource="{x:Bind ViewModel.Persons}">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="models:Person">
						<StackPanel Orientation="Horizontal" Spacing="12">
							<TextBlock Text="{x:Bind FirstName}" />
							<TextBlock Text="{x:Bind LastName}" />
							<TextBlock Text="{x:Bind BirthDate, StringFormat='(geb. {0:yyyy})'}"
                                       Opacity="0.6" />
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackPanel>
	</Grid>
</Page>
