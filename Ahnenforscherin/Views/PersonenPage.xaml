<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Ahnenforscherin.Views.PersonenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ahnenforscherin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <ScrollViewer>
        <StackPanel Padding="32" Spacing="24">

            <!-- Titel -->
            <TextBlock Text="Personen"
                       FontSize="28"
                       FontWeight="SemiBold" />

            <!-- Beschreibung -->
            <TextBlock TextWrapping="Wrap"
                       FontSize="16"
                       Opacity="0.85">
                Hier werden später alle Personen deiner Familiengeschichte angezeigt.
                Du kannst neue Personen anlegen, bearbeiten und durchsuchen.
            </TextBlock>

            <!-- Quick Action -->
            <Button Content="Neue Person anlegen"
                    HorizontalAlignment="Left"
                    Style="{StaticResource AccentButtonStyle}" />

            <!-- Platzhalter für Liste -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12"
                    Padding="24"
                    MinHeight="200"
                    Opacity="0.8">

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12">

                    <FontIcon Glyph="&#xE77B;"
                              FontFamily="Segoe Fluent Icons"
                              FontSize="48"
                              Opacity="0.5" />

                    <TextBlock Text="Noch keine Personen vorhanden"
                               FontSize="18"
                               Opacity="0.7" />

                    <TextBlock Text="Sobald du Personen anlegst oder importierst, erscheinen sie hier."
                               TextAlignment="Center"
                               Opacity="0.6" />
                </StackPanel>

            </Border>

        </StackPanel>
    </ScrollViewer>

</Page>
