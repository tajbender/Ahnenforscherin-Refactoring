<Page
    x:Class="Ahnenforscherin.Views.WorkbenchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ahnenforscherin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <!-- Hover-Style für Workbench-Kacheln -->
        <Style x:Key="WorkbenchTileStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <ThemeShadow />
                </Setter.Value>
            </Setter>

            <!--<Setter Property="Translation" Value="0,0,8" />-->

            <!--<Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        </Grid>

                        <ControlTemplate.Triggers>

                            -->
            <!-- Hover -->
            <!--
                            <Trigger Property="IsPointerOver" Value="True">
                                <Setter TargetName="RootGrid" Property="Scale" Value="1.05" />
                                <Setter TargetName="RootGrid" Property="Opacity" Value="0.95" />
                            </Trigger>

                            -->
            <!-- Pressed -->
            <!--
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootGrid" Property="Scale" Value="0.97" />
                                <Setter TargetName="RootGrid" Property="Opacity" Value="0.85" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>-->

        </Style>
    </Page.Resources>
    <ScrollViewer>
        <StackPanel Padding="32" Spacing="32">
            <!-- Begrüßung -->
            <StackPanel Spacing="4">
                <TextBlock Text="Willkommen in Ahnenforscherin"
                           FontSize="28"
                           FontWeight="SemiBold" />

                <TextBlock Text="Beginne dein Abenteuer in der Familiengeschichte"
                           FontSize="16"
                           Opacity="0.85" />
            </StackPanel>
            <!-- Drei Hauptkacheln -->
            <Grid x:Name="RootGrid" ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Personen -->
                <Button Grid.Column="0"
                        Click="Personen_Click"
                        Style="{StaticResource WorkbenchTileStyle}">
                    <StackPanel HorizontalAlignment="Center" Spacing="12">
                        <FontIcon Glyph="&#xE77B;" FontFamily="Segoe Fluent Icons" FontSize="36" />
                        <TextBlock Text="Personen" FontSize="18" FontWeight="SemiBold" />
                    </StackPanel>
                </Button>

                <!-- Stammbaum -->
                <Button Grid.Column="1" 
                        Click="Personen_Click"
                        Style="{StaticResource WorkbenchTileStyle}">
                    <StackPanel HorizontalAlignment="Center" Spacing="12">
                        <FontIcon Glyph="&#xE8B7;" FontFamily="Segoe Fluent Icons" FontSize="36" />
                        <TextBlock Text="Stammbaum" FontSize="18" FontWeight="SemiBold" />
                    </StackPanel>
                </Button>

                <!-- Migration -->
                <Button Grid.Column="2" 
                        Click="Personen_Click"
                        Style="{StaticResource WorkbenchTileStyle}">
                    <StackPanel HorizontalAlignment="Center" Spacing="12">
                        <FontIcon Glyph="&#xE707;" FontFamily="Segoe Fluent Icons" FontSize="36" />
                        <TextBlock Text="Migration" FontSize="18" FontWeight="SemiBold" />
                    </StackPanel>
                </Button>

            </Grid>

            <!-- Statusbereich -->
            <StackPanel Spacing="8">
                <TextBlock Text="Status"
                           FontSize="20"
                           FontWeight="SemiBold" />

                <TextBlock Text="0 Personen" Opacity="0.7" />
                <TextBlock Text="0 Familien" Opacity="0.7" />
                <TextBlock Text="0 Orte" Opacity="0.7" />
            </StackPanel>

            <!-- Quick Actions -->
            <StackPanel Spacing="12">
                <TextBlock Text="Schnellaktionen"
                           FontSize="20"
                           FontWeight="SemiBold" />

                <Button Content="Neue Person anlegen"
                        HorizontalAlignment="Left" />

                <Button Content="GEDCOM importieren"
                        HorizontalAlignment="Left" />

                <Button Content="Datenbank öffnen"
                        HorizontalAlignment="Left" />
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
