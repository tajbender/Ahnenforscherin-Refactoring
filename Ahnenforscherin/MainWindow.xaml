<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Ahnenforscherin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Ahnenforscherin"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ahnenforscherin">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <NavigationView x:Name="NavigationView"
                        Header="Ahnenforscherin"
                        PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Werkbank"
                                    Tag="WorkbenchPage"
                                    Icon="GoToToday" />
                <NavigationViewItem Content="Ahnen"
                                    Tag="AncientsPage"
                                    Icon="People" />
                <NavigationViewItem Content="Historie"
                                    Tag="HistoryPage"
                                    Icon="Calendar" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Benutzer"
                                    Tag="AccountPage"
                                    Icon="Contact" />
                <NavigationViewItem Content="Datenquelle"
                                    Tag="DatasourcePage"
                                    Icon="Library" />
                <NavigationViewItem Content="Hilfe"
                                    Tag="HelpPage"
                                    Icon="Help" />
            </NavigationView.FooterMenuItems>
            <!-- <Frame x:Name="ContentFrame" />-->

            <Grid Padding="24"
                  RowDefinitions="Auto,*,Auto">

                <!-- Header -->
                <StackPanel Orientation="Vertical"
                            Spacing="4">
                    <TextBlock Text="Workbench"
                               FontSize="32"
                               FontWeight="SemiBold" />
                    <TextBlock Text="Zentrale Aktionen für deine Ahnenforscherin"
                               Opacity="0.7" />
                </StackPanel>

                <!-- Main Action Grid -->
                <Grid Grid.Row="1"
                      ColumnDefinitions="*,*,*"
                      RowDefinitions="*,*,*"
                      ColumnSpacing="24"
                      Margin="0,24,0,24">

                    <!-- Neue Person -->
                    <TextBlock Grid.Column="0"
                               Grid.Row="0"
                               Text="Personen"
                               FontSize="20"
                               FontWeight="SemiBold" />
                    <Button Grid.Column="1"
                            Grid.Row="0"
                            Content="Neue Person anlegen"
                            Click="CreatePerson_Click"
                            Width="200" />
                    <Button Grid.Column="2"
                            Grid.Row="0"
                            Content="Personenliste öffnen"
                            Click="OpenPersonList_Click"
                            Width="200" />

                    <!-- Import / Export -->
                    <TextBlock Grid.Column="0"
                               Grid.Row="1"
                               Text="Daten"
                               FontSize="20"
                               FontWeight="SemiBold" />
                    <Button Grid.Column="1"
                            Grid.Row="1"
                            Content="GEDCOM importieren"
                            Click="ImportGedcom_Click"
                            Width="200" />
                    <Button Grid.Column="2"
                            Grid.Row="1"
                            Content="GEDCOM exportieren"
                            Click="ExportGedcom_Click"
                            Width="200" />

                    <!-- Stammbaum -->
                    <TextBlock Grid.Column="0"
                               Grid.Row="2"
                               Text="Stammbaum"
                               FontSize="20"
                               FontWeight="SemiBold" />
                    <Button Grid.Column="1"
                            Grid.Row="2"
                            Content="Stammbaum öffnen"
                            Click="OpenTree_Click"
                            Width="200" />
                    <Button Grid.Column="2"
                            Grid.Row="2"
                            Content="Neuen Stammbaum erstellen"
                            Click="CreateTree_Click"
                            Width="200" />

                </Grid>

                <!-- Status Footer -->
                <Border Grid.Row="2"
                        Background="#11000000"
                        Padding="12"
                        CornerRadius="6">
                    <TextBlock x:Name="StatusText"
                               Text="Bereit wenn Du es bist."
                               Opacity="0.8" />
                </Border>

            </Grid>

        </NavigationView>
    </Grid>
</Window>
