<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Ahnenforscherin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Ahnenforscherin"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ahnenforscherin">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid Background="{StaticResource AfBackgroundAltColor}">
        <NavigationView x:Name="NavigationView"
                        Header="Ahnenforscherin"
                        Background="{StaticResource AfBackgroundAltColor}"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left"
                        SelectionChanged="NavigationView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Workbench"
                                    Icon="Home"
                                    Tag="Workbench"/>
                <NavigationViewItem Content="Personen"
                                    Icon="People" 
                                    Tag="Personen"/>
                <NavigationViewItem Content="Stammbaum"
                                    Icon="Calendar" 
                                    Tag="Stammbaum" />
                <NavigationViewItem Content="Migration"
                                    Icon="Calendar" 
                                    Tag="Migration"/>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Benutzerkonten"
                                    Icon="Account" 
                                    IsEnabled="False"
                                    Tag="AccountPage"/>
                <NavigationViewItem Content="Datenquellen"
                                    Icon="Library" 
                                    IsEnabled="False"
                                    Tag="DatasourcePage"/>
                <NavigationViewItem Content="Hilfe"
                                    Icon="Help" 
                                    IsEnabled="False"
                                    Tag="HelpPage"/>
            </NavigationView.FooterMenuItems>
            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
